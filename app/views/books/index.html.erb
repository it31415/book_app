<% provide(:title, '本一覧') %>
<h1>本一覧</h1>

<table align="center">
  <%= render 'column_name' %>
  <% @books.each do |book| %>
  <tr>
    <td style='border-style:solid'>
      <%= link_to book.id, book %>
    <td style='border-style:solid'>
      <%= book.book_title %>
    </td>
    <td style='border-style:solid'>
      <%= link_to '編集', edit_book_path(book.id) %>
    </td>
    <td style='border-style:solid'>
    <%= link_to "削除", book, method: :delete, data: { confirm: "本当に削除しますか?" } %>
    </td>
  </tr>
  <% end %>
</table>
