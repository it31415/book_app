<% provide(:title, 'circulation') %>
<h1>貸出</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@circulation, url: circulate_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>

      <%= f.label :book_name %>
      <%= f.text_field :book_name, class: 'form-control' %>

      <%= f.label :checkout_date %>
      <%= f.text_field :checkout_date, class: 'form-control' %>

      <%= f.label :return_date %>
      <%= f.text_field :return_date, class: 'form-control' %>

      <%= f.submit "本を借りる", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
