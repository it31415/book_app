<%= form_for(@circulation, url: yield(:url)) do |f| %>
  <%= render 'error_messages', object: @circulation %>

  <%= f.label :利用者名 %>
  <%= f.text_field :user_name, class: 'form-control' %>

  <%= f.label :本のタイトル %>
  <%= f.text_field :book_title, class: 'form-control' %>

  <%= f.label :貸出日 %>
  <%= f.text_field :checkout_date, class: 'form-control' %>

  <%= f.label :返却日 %>
  <%= f.text_field :return_date, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
